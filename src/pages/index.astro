---
import Layout from "../layouts/Layout.astro";
---
<Layout title="Welcome to Astro.">
	<header
		slot="header"
		id="header"
		class="min-h-20 flex justify-center items-center shadow-md p-3"
	>
		<nav class="">
			<ul class="flex md:flex-row flex-col md:gap-20 gap-2 justify-center items-center">
				<li class="rounded-2xl bg-blue-600 font-bold text-white p-3">
					<a class="p-3" href="/">Agregar/Adicionar</a>
				</li>
				<li class="rounded-2xl bg-gray-300 font-bold text-white p-3">
					<a class="p-3" href="/studio">Agregar Noticia</a>
				</li>
				<li class="rounded-2xl bg-gray-300 font-bold text-white p-3">
					<a class="p-3" href="/eliminar">Eliminar Publicaciones</a>
				</li>
			</ul>
		</nav>
	</header>
	<div
		id="accordion-collapse"
		class="w-[90%] my-5 mx-auto"
		data-accordion="collapse"
	>
		<h2 id="accordion-collapse-heading-1">
			<button
				type="button"
				class="flex items-center justify-between w-full p-5 font-medium rtl:text-right text-gray-500 border border-b-0 border-gray-200 rounded-t-xl focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-800 dark:border-gray-700 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-800 gap-3"
				data-accordion-target="#accordion-collapse-body-1"
				aria-expanded="true"
				aria-controls="accordion-collapse-body-1"
			>
				<span>Subir nueva convocatoria</span>
				<svg
					data-accordion-icon
					class="w-3 h-3 rotate-180 shrink-0"
					aria-hidden="true"
					xmlns="http://www.w3.org/2000/svg"
					fill="none"
					viewBox="0 0 10 6"
				>
					<path
						stroke="currentColor"
						stroke-linecap="round"
						stroke-linejoin="round"
						stroke-width="2"
						d="M9 5 5 1 1 5"></path>
				</svg>
			</button>
		</h2>
		<div
			id="accordion-collapse-body-1"
			class="hidden p-3"
			aria-labelledby="accordion-collapse-heading-1"
		>
			<div class="accordion-body w-[90%] m-auto">
				<h2 class="text-center font-bold text-3xl">
					Subir nueva Convocatoria
				</h2>
				<form
					action="https://adminicstracioncolquiri.onrender.com/convocatoria"
					method="post"
					enctype="multipart/form-data"
					class=""
				>
					<div class="mb-3 grid">
						<label for="titulo" class="form-label"
							>Titiulo Nueva Convocatoria</label
						>
						<input
							name="titulo"
							type="text"
							class="w-full"
							id="titulo"
							aria-describedby="textHelp"
							placeholder="Introduce un nuevo Título"
							required
						/>
					</div>
					<div class="mb-3">
						<label for="descripcion" class="form-label"
							>Descripcion</label
						>
						<input
							type="text"
							name="descripcion"
							class="form-control"
							id="descripcion"
							placeholder="Introduce una descripción"
							required
						/>
					</div>
					<div class="mb-3">
						<label for="fecha" class="form-label">Fecha</label>
						<input
							type="date"
							name="fecha"
							class="form-control"
							id="fecha"
							required
						/>
					</div>
					<div class="mb-3">
						<label for="archivo" class="form-label"
							>Seleccionar PDF para subir</label
						>
						<input
							type="file"
							name="archivo"
							accept="application/pdf"
							class="form-control"
							id="archivo"
							required
						/>
					</div>
					<button type="submit" class=""
						>Subir Nueva Convocatoria</button
					>
				</form>
			</div>
		</div>
		<h2 id="accordion-collapse-heading-2">
			<button
				type="button"
				class="flex items-center justify-between w-full p-5 font-medium rtl:text-right text-gray-500 border border-b-0 border-gray-200 focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-800 dark:border-gray-700 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-800 gap-3"
				data-accordion-target="#accordion-collapse-body-2"
				aria-expanded="false"
				aria-controls="accordion-collapse-body-2"
			>
				<span>Subir nuevos Decretos Municipales</span>
				<svg
					data-accordion-icon
					class="w-3 h-3 rotate-180 shrink-0"
					aria-hidden="true"
					xmlns="http://www.w3.org/2000/svg"
					fill="none"
					viewBox="0 0 10 6"
				>
					<path
						stroke="currentColor"
						stroke-linecap="round"
						stroke-linejoin="round"
						stroke-width="2"
						d="M9 5 5 1 1 5"></path>
				</svg>
			</button>
		</h2>
		<div
			id="accordion-collapse-body-2"
			class="hidden p-3"
			aria-labelledby="accordion-collapse-heading-2"
		>
			<div class="accordion-body w-[90%] m-auto">
				<h2 class="text-center font-bold text-3xl">
					Subir nuevo Decreto Municipal
				</h2>
				<form
					action="https://adminicstracioncolquiri.onrender.com/dm"
					method="post"
					enctype="multipart/form-data"
				>
					<div class="mb-3">
						<label for="nro" class="form-label"
							>Nro Nuevo Decreto Municipal</label
						>
						<input
							name="nro"
							type="text"
							class="form-control"
							id="nro"
							aria-describedby="textHelp"
							placeholder="Nro del nuevo decreto"
							required
						/>
					</div>
					<div class="mb-3">
						<label for="fecha" class="form-label">Fecha</label>
						<input
							name="fecha"
							type="date"
							class="form-control"
							id="fecha"
							required
						/>
					</div>
					<div class="mb-3">
						<label for="descripcion" class="form-label"
							>Descripcion</label
						>
						<input
							name="descripcion"
							type="text"
							class="form-control"
							id="descripcion"
							placeholder="Introducir una descripción"
							required
						/>
					</div>
					<div class="mb-3">
						<label for="archivo" class="form-label"
							>Seleccionar PDF para subir</label
						>
						<input
							type="file"
							name="archivo"
							accept="application/pdf"
							class="form-control"
							id="archivo"
							required
						/>
					</div>
					<button type="submit" class="btn btn-primary"
						>Subir Nuevo Decreto</button
					>
				</form>
			</div>
		</div>
		<h2 id="accordion-collapse-heading-3">
			<button
				type="button"
				class="flex items-center justify-between w-full p-5 font-medium rtl:text-right text-gray-500 border border-gray-200 focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-800 dark:border-gray-700 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-800 gap-3"
				data-accordion-target="#accordion-collapse-body-3"
				aria-expanded="false"
				aria-controls="accordion-collapse-body-3"
			>
				<span>Subir nuevas Resoluciones Municipales</span>
				<svg
					data-accordion-icon
					class="w-3 h-3 rotate-180 shrink-0"
					aria-hidden="true"
					xmlns="http://www.w3.org/2000/svg"
					fill="none"
					viewBox="0 0 10 6"
				>
					<path
						stroke="currentColor"
						stroke-linecap="round"
						stroke-linejoin="round"
						stroke-width="2"
						d="M9 5 5 1 1 5"></path>
				</svg>
			</button>
		</h2>
		<div
			id="accordion-collapse-body-3"
			class="hidden p-3"
			aria-labelledby="accordion-collapse-heading-3"
		>
			<div class="w-[90%] m-auto">
				<h2 class="text-center font-bold text-3xl">
					Subir nuevas Resoluciones Municipales
				</h2>
				<form
					action="https://adminicstracioncolquiri.onrender.com/rm"
					method="post"
					enctype="multipart/form-data"
				>
					<div class="mb-3">
						<label for="nro" class="form-label"
							>Nro Nueva Resolución Municipal</label
						>
						<input
							name="nro"
							type="text"
							class="form-control"
							id="nro"
							aria-describedby="textHelp"
							placeholder="Nro del nueva resolución"
							required
						/>
					</div>
					<div class="mb-3">
						<label for="fecha" class="form-label">Fecha</label>
						<input
							name="fecha"
							type="date"
							class="form-control"
							id="fecha"
							required
						/>
					</div>
					<div class="mb-3">
						<label for="descripcion" class="form-label"
							>Descripcion</label
						>
						<input
							name="descripcion"
							type="text"
							class="form-control"
							id="descripcion"
							required
						/>
					</div>
					<div class="mb-3">
						<label for="archivo" class="form-label"
							>Seleccionar PDF para subir</label
						>
						<input
							type="file"
							name="archivo"
							accept="application/pdf"
							class="form-control"
							id="archivo"
							required
						/>
					</div>
					<button type="submit" class="btn btn-primary"
						>Subir Nueva Resolucion Municipal</button
					>
				</form>
			</div>
		</div>
		<h2 id="accordion-collapse-heading-4">
			<button
				type="button"
				class="flex items-center justify-between w-full p-5 font-medium rtl:text-right text-gray-500 border border-gray-200 focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-800 dark:border-gray-700 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-800 gap-3"
				data-accordion-target="#accordion-collapse-body-4"
				aria-expanded="false"
				aria-controls="accordion-collapse-body-4"
			>
				<span>Subir nuevas Leyes Municipales</span>
				<svg
					data-accordion-icon
					class="w-3 h-3 rotate-180 shrink-0"
					aria-hidden="true"
					xmlns="http://www.w3.org/2000/svg"
					fill="none"
					viewBox="0 0 10 6"
				>
					<path
						stroke="currentColor"
						stroke-linecap="round"
						stroke-linejoin="round"
						stroke-width="2"
						d="M9 5 5 1 1 5"></path>
				</svg>
			</button>
		</h2>
		<div
			id="accordion-collapse-body-4"
			class="hidden p-3"
			aria-labelledby="accordion-collapse-heading-4"
		>
			<div class="w-[90%] m-auto">
				<h2 class="text-center font-bold text-3xl">
					Subir nuevas Leyes Municipales
				</h2>
				<form
					action="https://adminicstracioncolquiri.onrender.com/lm"
					method="post"
					enctype="multipart/form-data"
				>
					<div class="mb-3">
						<label for="nro" class="form-label"
							>Nro Nueva Ley Municipal</label
						>
						<input
							name="nro"
							type="text"
							class="form-control"
							id="nro"
							aria-describedby="textHelp"
							placeholder="Nro Nueva Ley Municipal"
							required
						/>
					</div>
					<div class="mb-3">
						<label for="fecha" class="form-label">Fecha</label>
						<input
							name="fecha"
							type="date"
							class="form-control"
							id="fecha"
							required
						/>
					</div>
					<div class="mb-3">
						<label for="descripcion" class="form-label"
							>Descripcion</label
						>
						<input
							name="descripcion"
							type="text"
							class="form-control"
							id="descripcion"
							placeholder="Introducir nueva ley "
							required
						/>
					</div>
					<div class="mb-3">
						<label for="archivo" class="form-label"
							>Seleccionar PDF para subir</label
						>
						<input
							type="file"
							name="archivo"
							accept="application/pdf"
							class="form-control"
							id="archivo"
							required
						/>
					</div>
					<button type="submit" class="btn btn-primary"
						>Subir Nueva Ley Municipal</button
					>
				</form>
			</div>
		</div>
	</div>
</Layout>
<style>
	input {
		display: block;
		width: 90%;
		border-radius: 30px;
	}
	form > button {
		padding: 12px 20px;
		background-color: rgb(8, 150, 8);
		border-radius: 30px;
		color: white;
	}
	form > button:hover{
		background-color: rgb(2, 70, 2);
	}
</style>
